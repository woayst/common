files:
  - package.json
plugins:
  prerelease:
    Linting config files:
      plugin: bumped-finepack
  postrelease:
    Generating CHANGELOG file:
      plugin: bumped-changelog
      options:
        preset: 'vue'
        filename: 'CHANGELOG.md'
    Update version.js:
      plugin: bumped-terminal
      command: "node version.js"
    Committing new version:
      plugin: bumped-terminal
      command: 'git add CHANGELOG.md package.json version.js && git commit -m "Release $newVersion"'
    Publishing tag:
      plugin: bumped-terminal
      command: 'git tag $newVersion && git push && git push --tags'
    Publishing in github:
      plugin: bumped-terminal
      command: 'git tag $newVersion && git push github main && git push github main --tags'